{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
