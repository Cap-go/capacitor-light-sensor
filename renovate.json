{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "schedule:earlyMondays"],
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": ["eslint"],
      "enabled": false
    },
    {
      "groupName": "Google packages",
      "matchPackagePatterns": ["^com.google"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "Gradle plugins",
      "matchPackagePatterns": ["^com.android.tools.build"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@capacitor/core", "@capacitor/ios", "@capacitor/android"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    },
    {
      "matchPackageNames": ["ionic-team/capacitor-swift-pm"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
